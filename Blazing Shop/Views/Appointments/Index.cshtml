@model IEnumerable<Blazing_Shop.Models.Appointment>
@{
    ViewBag.Title = "Index";
}

<h2>Appointments</h2>

<p>
    @Html.ActionLink("Add Appointment", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Full Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Product Name
        </th>
        <th>
           Date
        </th>
        <th>
            Confirmed
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(item.PersonName, "Details", new { id = item.Id },null)
       
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.PhoneNumber)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Date)
    </td>
    <td>
       
        @Html.CheckBoxFor(modelItem => item.IsConfirmed, new { @disabled = "" })
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit","Appointments", new { id = item.Id },  new { @class = "btn btn-primary" } ) 
        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
       
    </td>
</tr>
    }

</table>

