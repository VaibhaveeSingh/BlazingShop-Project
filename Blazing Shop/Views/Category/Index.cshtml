@model IEnumerable<Blazing_Shop.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Add Category", "New",null, new { @class = "btn btn-success" })
</p>
@*<button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addcategory" data-url="~/Views/Category/New">Add Category</button>*@
<table class="table">
    <tr>
        
        <th>Category Name</th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                
                @Html.ActionLink( item.CName, "Details","Category", new { id = item.Id },null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary"})

                @*@Html.ActionLink("Details", "Details", new { id = item.Id })*@
                @*@Html.ActionLink("Delete", "Delete", new { id = item.Id },new { @class = "btn btn-danger" })*@
            </td>
        </tr>
    }

</table>