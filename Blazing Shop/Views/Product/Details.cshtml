@model Blazing_Shop.Models.Product

@{
    ViewBag.Title = "Details";
}

<div class="container contact-form">
    <div class="contact-image">

    </div>
    <h3>Product Details</h3>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <div class="row">
                    <lable class="col-4">Name</lable>
                    @Html.TextBoxFor(model => model.Name)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <lable class="col-4" >Price</lable>
                    @Html.TextBoxFor(model => model.Price)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <lable class="col-4"> Shade Colour</lable>
                    @Html.TextBoxFor(model => model.ShadeColour)
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <lable class="col-4">Category</lable>
                    @Html.TextBoxFor(model => model.Category.CName)
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="form-group">
                <img src='/Product/RetrieveImage/@Model.Id' style="max-width:200px; max-height:200px;" />
            </div>
        </div>
    </div>

</div>
<p>

    @Html.ActionLink("Back to List", "Index", "Home", null, new { @class = "btn btn-success" })
    @Html.ActionLink("Book an Appointment", "Create", "Appointments", new { id = Model.Id }, new { @class = "btn btn-primary" })
</p>
