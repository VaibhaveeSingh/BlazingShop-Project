@model IEnumerable <Blazing_Shop.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Add Product", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
           Price
        </th>
        <th>
           Shade Colour
        </th>
        <th>
           Category
        </th>
        <th>
           
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.ActionLink(item.Name, "Details","Product", new { id = item.Id },null)
     
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ShadeColour)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category.CName)
    </td>
    <td>
        <img src='/Product/RetrieveImage/@item.Id' style="max-width:200px; max-height:200px;" />
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" }) 
        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
    </td>
</tr>
    }

</table>

